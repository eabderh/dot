# localhost:/srv/keys/public/

# http
server {
	server_name keys.bananalias.xyz;
	listen 80;
	return 301 https://$host$request_uri;
}

# https
server {
	server_name keys.bananalias.xyz;
	listen 443 ssl;
	ssl_certificate 
		/etc/letsencrypt/live/bananalias.xyz/fullchain.pem;
	ssl_certificate_key 
		/etc/letsencrypt/live/bananalias.xyz/privkey.pem;

	location / {
		root /srv/keys/public/;
		autoindex on;
	}
}

