
! URxvt
!------------------------------------------------------------------------------

! font
! list fonts with fc-list
!URxvt.font: xft:DejaVu Sans Mono:size=11:style=Semibold
URxvt.font: xft:Source Code Pro Semibold:style=Semibold:size=11
!URxvt.font: xft:Source Code Pro,Source Code Pro Semibold:style=Semibold,Regular:size=11
URxvt.boldFont: xft:Source Code Pro:style=Bold:size=11
! URxvt.boldFont: -*-rissole-*
! URxvt.italicFont: -*-rissole-*
! URxvt.boldItalicfont: -*-rissole-*

! look
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 20
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.depth: 24
URxvt.iso14755: false

! bell
URxvt.urgentOnBell: false
URxvt.visualBell: false

! copy/paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! keys
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Home: \033[1~
URxvt.keysym.End: \033[4~

! sound
!URxvt.perl-ext-common: bell-command


! colors
!------------------------------------------------------------------------------


! https://github.com/morhetz/gruvbox-contrib

! gruvbox matched
! hard contrast: *background: #1d2021
*background: #1e1e1e
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
!*color0:  #282828
!*color0:  #222222
*color0:  #1e1e1e

*color8:  #928374
! DarkRed + Red
*color1:  #fb4934
*color9:  #fb4934
! DarkGreen + Green
*color2:  #b8bb26
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #fabd2f
*color11: #fabd2f
! DarkBlue + Blue
