[user]
	name = elias
	email = elias@bytekite.io
[core]
	editor = vim
[rerere]
	enabled = true
[push]
	default = current



# colors
#------------------------------------------------------------------------------

[color]
	#ui = auto
	#status = auto
	#branch = auto
	#interactive = auto
#	diff = auto
[color "diff"]
	meta = blue
	context = white
	frag = white
	new = yellow
	old = red
[color "status"]
	header = blue
	localBranch = blue
	remoteBranch = cyan
	added = cyan
	changed = green




