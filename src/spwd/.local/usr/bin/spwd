#!/bin/bash
length=20
if [ "$1" != "" ]; then
	length="$1"
fi
#mpath="$(printf "%${length}s" "$(pwd)" | sed "s:$HOME:\~:" )"
mpath="$(pwd \
	| sed "s:$HOME:\~:" \
	| tail -c $length \
	| xargs printf "%${length}s"
)"
#if [ ${#mpath} -ge $length ]; then
#	mpath="$(echo -n "$mpath" | tail -c $length)"
#fi
#mpath="$(printf "%${length}s" "$mpath")"
echo "$mpath"
exit 0

