
" split horizontal/vertical
nnoremap w; 	:split<CR>
nnoremap w' 	:vsplit<CR>


" move to window down/up/left/right
nnoremap wj 	<C-w>j
nnoremap wk 	<C-w>k
nnoremap wh 	<C-w>h
nnoremap wl 	<C-w>l

" exit window mode
nnoremap <silent> 	wq 		:close<CR>
nnoremap <silent> 	ww 		:only<CR>
nnoremap <silent> 	we 		:only<CR>
nnoremap <silent> 	wdd 	:only<CR>

